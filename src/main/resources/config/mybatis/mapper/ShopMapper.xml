<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.mapper.ShopMapper">
	
	<select id="getAllShop" resultType="Shop">
    	select * from shop
    </select>
    
    <select id="getFindShopTitleAddr" resultType="Shop" parameterType="string">
    	select * from shop
    	<where>
    		sname like '%'||#{value}||'%' or saddr like '%'||#{value}||'%'
    	</where>
    	
    </select>
    
</mapper>